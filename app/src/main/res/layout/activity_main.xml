<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/yeni"
        android:src="@drawable/yeni"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="300dp"
        android:layout_height="395dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="86dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="99dp"
        app:layout_constraintBottom_toTopOf="@+id/puanText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.308">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:onClick="puaniArttir"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/dogukan" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:onClick="puaniArttir"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/dogukan" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:onClick="puaniArttir"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/dogukan" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:onClick="puaniArttir"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/dogukan" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:onClick="puaniArttir"
            app:layout_column="1"
            app:layout_row="1"
            app:srcCompat="@drawable/dogukan" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:onClick="puaniArttir"
            app:layout_column="1"
            app:layout_row="2"
            app:srcCompat="@drawable/dogukan" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:onClick="puaniArttir"
            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@drawable/dogukan" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:onClick="puaniArttir"
            app:layout_column="2"
            app:layout_row="1"
            app:srcCompat="@drawable/dogukan" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:onClick="puaniArttir"
            app:layout_column="2"
            app:layout_row="2"
            app:srcCompat="@drawable/dogukan" />

    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="28dp"
        android:text="ZAMAN:10"
        android:textAlignment="textEnd"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="ZAMAN:10 " />

    <TextView
        android:id="@+id/puanText"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_marginEnd="152dp"
        android:layout_marginBottom="80dp"
        android:text="PUAN:0"
        android:textColor="#E2D5D5"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />
</androidx.constraintlayout.widget.ConstraintLayout>